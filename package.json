{
  "name": "vscode-deno",
  "displayName": "%deno.displayName%",
  "description": "%deno.description%",
  "version": "3.6.1",
  "publisher": "axetroy",
  "icon": "deno.png",
  "galleryBanner": {
    "color": "#3B3738",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/axetroy/vscode-deno"
  },
  "bugs": {
    "url": "https://github.com/axetroy/vscode-deno/issues"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "deno"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onDebug",
		"onCommand:deno.debug.getProgramName"
  ],
  "main": "./client/out/client/src/extension.js",
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-deno-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "commands": [
      {
        "command": "deno.restart_server",
        "title": "%deno.command.restart_server%",
        "category": "deno"
      },
      {
        "command": "deno._refresh_tree",
        "title": "Refresh",
        "category": "deno",
        "icon": {
          "light": "resource/icon/refresh.light.svg",
          "dark": "resource/icon/refresh.dark.svg"
        }
      },
      {
        "command": "deno.debugger.toggleSkippingFile",
        "title": "%debugger.toggle.skipping.this.file%"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "deno",
          "name": "%deno.dependency%",
          "when": "denoExtensionActivated"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "deno._refresh_tree",
          "group": "navigation@1",
          "when": "view == deno"
        }
      ],
      "commandPalette": [
        {
          "command": "deno._refresh_tree",
          "when": "never"
        },
        {
          "command": "deno.restart_server",
          "when": "denoExtensionActivated"
        }
      ],
      "debug/callstack/context": [
        {
          "command": "deno.debugger.toggleSkippingFile",
          "group": "navigation",
          "when": "inDebugMode && debugType == 'deno' && callStackItemType == 'stackFrame'"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Deno",
      "properties": {
        "deno.enable": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%deno.config.enabled%",
          "scope": "resource",
          "examples": [
            true,
            false
          ]
        },
        "deno.import_map": {
          "type": "string",
          "markdownDescription": "%deno.config.import_map%",
          "scope": "resource",
          "examples": [
            "./import_map.json",
            "/absolute/path/to/import_map.json"
          ]
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "import_map.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "import_maps.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "importmap.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "importmaps.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "import-map.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "import-maps.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "importMap.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "importMaps.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "ImportMap.json",
        "url": "./schemas/import_map.schema.json"
      },
      {
        "fileMatch": "ImportMaps.json",
        "url": "./schemas/import_map.schema.json"
      }
    ],
		"breakpoints": [
			{
				"language": "javascript"
      },
      {
				"language": "javascriptreact"
      },
      {
				"language": "typescript"
      },
      {
				"language": "typescriptreact"
			}
		],
		"debuggers": [
      {
        "type": "deno",
        "label": "Deno debug",
        "languages": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
        "configurationAttributes": {
          "launch": {
            "required": [
              "cwd"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "%debugger.launch.program.description%"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%debugger.stopOnEntry.description%",
                "default": true
              },
              "console": {
                "enum": [
                  "internalConsole",
                  "integratedTerminal",
                  "externalTerminal"
                ],
                "description": "%debugger.launch.console.description%",
                "default": "internalConsole"
              },
              "args": {
                "type": "array",
                "description": "%debugger.launch.args.description%",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "restart": {
                "type": "boolean",
                "description": "%debugger.restart.description%",
                "default": true
              },
              "cwd": {
                "type": "string",
                "description": "%debugger.launch.cwd.description%",
                "default": "${workspaceFolder}"
              },
              "runtimeExecutable": {
                "type": [
                  "string",
                  "null"
                ],
                "markdownDescription": "%debugger.launch.runtimeExecutable.description%",
                "default": null
              },
              "runtimeArgs": {
                "type": "array",
                "description": "%debugger.launch.runtimeArgs.description%",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "%debugger.launch.env.description%",
                "default": {}
              },
              "sourceMaps": {
                "type": "boolean",
                "description": "%debugger.sourceMaps.description%",
                "default": true
              },
              "outFiles": {
                "type": "array",
                "description": "%debugger.outFiles.description%",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "port": {
                "type": "number",
                "description": "%debugger.port.description%",
                "default": 9229
              },
              "address": {
                "type": "string",
                "description": "%debugger.address.description%",
                "default": "localhost"
              },
              "timeout": {
                "type": "number",
                "description": "%debugger.timeout.description%",
                "default": 10000
              },
              "smartStep": {
                "type": "boolean",
                "description": "%debugger.smartStep.description%",
                "default": true
              },
              "trace": {
                "type": [
                  "boolean",
                  "string"
                ],
                "enum": [
                  "verbose",
                  true
                ],
                "default": true,
                "description": "%debugger.trace.description%"
              },
              "sourceMapPathOverrides": {
                "type": "object",
                "description": "%debugger.sourceMapPathOverrides.description%",
                "default": {}
              },
              "skipFiles": {
                "type": "array",
                "description": "%debugger.skipFiles.description%",
                "default": []
              },
              "envFile": {
                "type": "string",
                "description": "%debugger.launch.envFile.description%",
                "default": "${workspaceFolder}/.env"
              },
              "showAsyncStacks": {
                "type": "boolean",
                "description": "%debugger.showAsyncStacks.description%",
                "default": true
              },
              "outputCapture": {
                "enum": [
                  "console",
                  "std"
                ],
                "description": "%debugger.launch.outputCapture.description%",
                "default": "console"
              },
              "enableSourceMapCaching": {
                "type": "boolean",
                "description": "%debugger.enableSourceMapCaching.description%",
                "default": true
              },
              "disableOptimisticBPs": {
                "type": "boolean",
                "description": "%debugger.disableOptimisticBPs.description%",
                "default": true
              }
            }
          },
          "attach": {
            "properties": {
              "port": {
                "type": "number",
                "description": "%debugger.port.description%",
                "default": 9229
              },
              "address": {
                "type": "string",
                "description": "%debugger.address.description%",
                "default": "localhost"
              },
              "timeout": {
                "type": "number",
                "description": "%debugger.timeout.description%",
                "default": 10000
              },
              "restart": {
                "type": "boolean",
                "description": "%debugger.restart.description%",
                "default": true
              },
              "sourceMaps": {
                "type": "boolean",
                "description": "%debugger.sourceMaps.description%",
                "default": true
              },
              "outFiles": {
                "type": "array",
                "description": "%debugger.outFiles.description%",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "%debugger.stopOnEntry.description%",
                "default": true
              },
              "localRoot": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "%debugger.attach.localRoot.description%",
                "default": null
              },
              "remoteRoot": {
                "type": [
                  "string",
                  "null"
                ],
                "description": "%debugger.attach.remoteRoot.description%",
                "default": null
              },
              "smartStep": {
                "type": "boolean",
                "description": "%debugger.smartStep.description%",
                "default": true
              },
              "trace": {
                "type": [
                  "boolean",
                  "string"
                ],
                "enum": [
                  "verbose",
                  true
                ],
                "default": true,
                "description": "%debugger.trace.description%"
              },
              "sourceMapPathOverrides": {
                "type": "object",
                "description": "%debugger.sourceMapPathOverrides.description%",
                "default": {}
              },
              "skipFiles": {
                "type": "array",
                "description": "%debugger.skipFiles.description%",
                "default": []
              },
              "showAsyncStacks": {
                "type": "boolean",
                "description": "%debugger.showAsyncStacks.description%",
                "default": true
              },
              "enableSourceMapCaching": {
                "type": "boolean",
                "description": "%debugger.enableSourceMapCaching.description%",
                "default": true
              },
              "disableOptimisticBPs": {
                "type": "boolean",
                "description": "%debugger.disableOptimisticBPs.description%",
                "default": true
              }
            }
          }
        },
				"initialConfigurations": [
					{
						"type": "deno",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Deno Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected markdown file.",
						"body": {
							"type": "deno",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "deno.debug.getProgramName"
				}
			}
		]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "postinstall": "cd client && yarn && cd ../server && yarn && cd .. && npm run installvscode",
    "installvscode": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -b -w",
    "compile": "tsc -b",
    "check": "prettier \"**/*.md\" \"**/*.json\" \"**/*.ts\" \"**/*.yml\" --config ./.prettierrc.json --check",
    "format": "prettier \"**/*.md\" \"**/*.json\" \"**/*.ts\" \"**/*.yml\" --config ./.prettierrc.json --write",
    "test": "jest --coverage",
    "test-coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "build": "npx vsce package -o ./vscode-deno.vsix --yarn",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check && npm run lint"
    }
  },
  "devDependencies": {
    "@types/deep-equal": "1.0.1",
    "@types/jest": "25.2.1",
    "@types/json5": "0.0.30",
    "@types/node": "12.12.36",
    "@types/which": "1.3.2",
    "@types/semver": "7.1.0",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "coveralls": "3.0.11",
    "eslint": "6.8.0",
    "execa": "4.0.0",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "prettier": "2.0.4",
    "ts-jest": "25.4.0",
    "typescript": "3.8.3",
    "vscode": "1.1.36",
    "which": "2.0.2"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "json5": "^2.1.1",
    "typescript-deno-plugin": "./typescript-deno-plugin",
    "vscode-nls-i18n": "^0.2.0",
    "semver": "7.3.2"
  }
}
